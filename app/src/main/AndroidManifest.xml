<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a161030.ivycon20">

    <!--特権の追加-->
    <!--Bluetoothのパーミッション-->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <!--位置情報のパーミッション-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>


    <!--4.0以上じゃないとできないおまじない-->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>

    <!--インターネット-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--ネットへのアクセス-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--ストレージの読み込み許可-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".UtilCommon">
        <!--一番最初に出す画面-->
        <activity android:name=".LoginStudent" android:theme="@style/SplashTheme" android:screenOrientation="portrait"> <!--android:theme="@style/SplashTheme"
                                                                                            に書き換えるとロード画面が自動でスプラッシュが標示される-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!--スプラッシュ-->
            </intent-filter>
        </activity>
        <!--アカウント新規作成-->
        <activity android:name=".NewAccountActivity" android:theme="@style/SplashTheme" android:label="@string/app_name"> <!--テーマを指定-->></activity>
        <!--パスワード忘れ-->
        <activity android:name=".PasswordForget" android:theme="@style/AppTheme" android:label="@string/app_name"> <!--テーマを指定-->></activity>
        <!--タイムライン-->
        <activity android:name=".StudentTimeline" android:theme="@style/AppTheme" android:label="@string/app_name"> <!--テーマを指定-->></activity>
        <!--マイページ-->
        <activity android:name=".StudentMypage" android:theme="@style/AppTheme" android:label="@string/app_name"> <!--テーマを指定-->></activity>
        <!--先生向け-->
        <!--先生ログイン-->
        <activity android:name=".LoginTeacher" android:theme="@style/AppTheme" android:label="@string/app_name"><!--テーマを指定--></activity>
        <!--学科情報-->
        <activity android:name=".TeacherDepartment" android:theme="@style/AppTheme" android:label="@string/app_name"> <!--テーマを指定-->></activity>
        <!--学年情報-->
        <activity android:name=".TeacherGrade" android:theme="@style/AppTheme" android:label="@string/app_name"> <!--テーマを指定-->></activity>
        <!--学生情報-->
        <activity android:name=".TeacherStudent" android:theme="@style/AppTheme" android:label="@string/app_name"> <!--テーマを指定-->></activity>


    </application>

</manifest>